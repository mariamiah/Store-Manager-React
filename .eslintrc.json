{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb",
    "plugins": [
        "react"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 6
    },
    "rules": {
        "react/jsx-filename-extension": "off",
        "jsx-a11y/label-has-associated-control": [ 2, {
          "labelComponents": ["CustomInputLabel"],
          "labelAttributes": ["label"],
          "controlComponents": ["CustomInput"],
          "depth": 3
        }]
      }
   
}
